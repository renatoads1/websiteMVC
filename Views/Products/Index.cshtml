@model IEnumerable<Weba2mvc.Models.Product>

@{
    ViewData["Title"] = "Produtos";
}
<h2>@ViewData["Title"]</h2>
<p>Pagina de Produros</p>
<a asp-action="Create" class="btn btn-primary">Create New</a>
<table class="table table-striped table-hover">
    <thead>
        <tr class="bg-primary">
            <th>
                @Html.DisplayNameFor(model => model.CodBarras)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrecoCompra)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrecoVenda)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuantidadeEstoque)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ativo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataCadastro)
            </th>
            <th>
                Edit
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var iten in Model)
        { 
        <tr>
            <td>@Html.DisplayFor(m => iten.CodBarras)</td>
            <td>@Html.DisplayFor(m => iten.Nome)</td>
            <td>@Html.DisplayFor(m => iten.Descricao)</td>
            <td>@Html.DisplayFor(m => iten.PrecoCompra)</td>
            <td>@Html.DisplayFor(m => iten.PrecoVenda)</td>
            <td>@Html.DisplayFor(m => iten.QuantidadeEstoque)</td>
            <td>@Html.DisplayFor(m => iten.Ativo)</td>
            <td>@Html.DisplayFor(m => iten.DataCadastro)</td>
            <td>
                <a asp-action="Edit" asp-route-id="@iten.Id">Edit</a>
                <a asp-action="Details" asp-route-id="@iten.Id">Details</a>
                <a asp-action="Delet" asp-route-id="@iten.Id">Delet</a>
            </td>
        </tr>
        }

    </tbody>

</table> 

